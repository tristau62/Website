<h1>Editing location</h1>
 
<%= form_for :location, url: location_path(@location), method: :patch do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :picture %><br>
    <%= f.text_field :picture %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :phone1 %><br>
    <%= f.text_field :phone1 %>
  </p>
  <p>
    <%= f.label :person1 %><br>
    <%= f.text_field :person1 %>
  </p>
  <p>
    <%= f.label :type %><br>
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', locations_path, class: 'btn sharp btn-primary btn-xs' %>