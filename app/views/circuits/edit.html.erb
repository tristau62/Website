<h1>Editing circuit</h1>
 
<%= form_for :circuit, url: circuit_path(@circuit), method: :patch do |f| %>
 
  <p>
    <%= f.label :carrier %><br>
    <%= f.text_field :carrier %>
  </p>
 
  <p>
    <%= f.label :contract %><br>
    <%= f.text_field :contract %>
  </p>
  <p>
    <%= f.label :purpose %><br>
    <%= f.text_area :purpose %>
  </p>
  <p>
    <%= f.label :expiration %><br>
    <%= f.text_field :expiration %>
  </p>
  <p>
    <%= f.label :rate %><br>
    <%= f.text_field :rate %>
  </p>
  
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', circuits_path, class: 'btn sharp btn-primary btn-xs' %>